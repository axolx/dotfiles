br = branch -a
mom = merge origin/master
sub = submodule update --init --recursive
cherry-pick = cherry-pick -x
ksdiff = difftool -y -t Kaleidoscope
ksmerge = mergetool -y -t Kaleidoscope
ksshow = ksdiff $1^..$1
lgrep = log --all --full-history --topo-order -S

